{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}
  {{ blog.title }}
{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <div class="date">
                <time datetime="{{ blog.created|date('c') }}">
                    {{ blog.created|date('l, F j, Y') }}
                </time>
            </div>
            <h2>{{ blog.title }}</h2>
        </header>
        <img src="{{ asset(['images/', blog.image]|join) }}" alt="{{ blog.title }} image not found" class="large" />
        <div>
            <p>{{ blog.body }}</p>
        </div>
    </article>
<div class="comments">
    <h2>Comments</h2>
    <ul>
        {% for comment in blog.comments %}
            <li><b>{{ comment.author }}</b> wrote: {{ comment.body }}</li>
        {% else %}
            <li>There are no comments yet</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
