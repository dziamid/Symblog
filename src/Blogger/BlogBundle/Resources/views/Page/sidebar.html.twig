<section class="section">
    <header>
        <h3>Tag Cloud</h3>
    </header>
    <p class="tags">
        {% for tag, weight in tags %}
            <span class="weight-{{ weight }}">{{ tag }}</span>
        {% else %}
            <p>There are no tags</p>
        {% endfor %}
    </p>
</section>

<section class="comments">
    <header>
        <h3>Latest comments</h3>
    </header>
    {% include 'BloggerBlogBundle:Comment:index.html.twig' with {'comments': comments, 'show_link': 1, 'show_date': 0} %}
</section>